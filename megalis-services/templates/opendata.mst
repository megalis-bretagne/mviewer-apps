<script>
var showMarqueBlanche = function() {
	document.getElementById("mqb-container").classList.toggle("code");

}

var flipCard = function() {
	document.querySelector(".flip-card-OUI").classList.toggle('hover');

}

var getStats = function() {
	if (_ODStats && _ODStats.taux_non_publie) {
		document.getElementById("opendata-stats").textContent = `${ parseInt(100 - parseFloat(_ODStats.taux_non_publie))} %` ;
	}

}

